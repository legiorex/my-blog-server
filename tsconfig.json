{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "sourceMap": true,
        "target": "ES2015",
        "module": "ES2022",
        "typeRoots": ["./custom.d.ts"],
        "lib": ["ES2015"]
    },
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "experimentalResolver": true
    },
    "files": ["custom.d.ts"],
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
