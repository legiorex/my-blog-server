{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "target": "es2016",
    "module": "ES2022"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
